<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thumbsDownImage"
        android:src="@drawable/ic_thumb_down_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discouragementTextView"
        android:text="Uh oh, you have not finished your work. What are you trying to do?"
        android:layout_above="@id/thumbsDownImage"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Work"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:id="@+id/backToWork"
        android:layout_alignTop="@+id/giveUp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Up"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/giveUp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_above="@+id/giveUp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:id="@+id/view2" />



</RelativeLayout>